---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Cyberpunk 2077 inspired Astro site">
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link href="https://fonts.googleapis.com/css2?family=Rajdhani:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <!-- <link rel="monetization" href="https://ilp.interledger-test.dev/darianeur">
    <link rel="monetization" href="https://ilp.interledger-test.dev/darianusd"> -->
  </head>
  <body>
      <script id="wmt-init-script" type="module" src="https://webmonetization.org/init.js?wa=ilp.interledger-test.dev/darianeur&tag=default&types=banner|widget"></script>
     <!-- <script id="wmt-init-script" type="module" src="http://localhost:5173/init.js?wa=https://ilp.interledger-test.dev/fba6a82b&tag=default&types=banner|widget"></script> -->
     <!-- FIX THE ABOVE BUG USING ANCA'S WALLET -->
    <slot />
    <style is:global>
      :root {
        --neon-yellow: #fcee09;
        --neon-blue: #00f0ff;
        --neon-pink: #ff00a0;
        --cyberpunk-red: #ff0055;
        --cyberpunk-dark: #0f0f1b;
        --cyberpunk-darker: #070712;
        --glitch-duration: 3s;
      }
      
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }
      
      html {
        font-family: 'Rajdhani', sans-serif;
        background-color: var(--cyberpunk-darker);
        color: white;
        overflow-x: hidden;
      }
      
      body {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
      }
      
      .glitch-text {
        position: relative;
        color: var(--neon-yellow);
        text-shadow: 0 0 5px var(--neon-yellow), 0 0 10px var(--neon-yellow);
        animation: glitch var(--glitch-duration) infinite;
      }
      
      .neon-text {
        color: var(--neon-blue);
        text-shadow: 0 0 5px var(--neon-blue), 0 0 10px rgba(0, 240, 255, 0.5);
      }
      
      .neon-pink {
        color: var(--neon-pink);
        text-shadow: 0 0 5px var(--neon-pink), 0 0 10px rgba(255, 0, 160, 0.5);
      }
      
      .cyberpunk-border {
        position: relative;
        border: 2px solid var(--cyberpunk-red);
        padding: 15px;
        margin: 10px 0;
        background-color: rgba(15, 15, 27, 0.7);
      }
      
      .cyberpunk-border::before {
        content: '';
        position: absolute;
        top: -5px;
        left: 15px;
        width: 30%;
        height: 5px;
        background-color: var(--cyberpunk-red);
      }
      
      .cyberpunk-border::after {
        content: '';
        position: absolute;
        bottom: -5px;
        right: 15px;
        width: 30%;
        height: 5px;
        background-color: var(--cyberpunk-red);
      }
      
      .noise {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-image: url('data:image/png;base64,');
        opacity: 0.03;
        z-index: -1;
        pointer-events: none;
      }
      
      .container {
        max-width: 1200px;
        margin: 0 auto 150px auto;
        padding: 0 20px;
      }
      
      .btn-cyberpunk {
        background-color: transparent;
        color: var(--neon-yellow);
        border: 1px solid var(--neon-yellow);
        padding: 10px 20px;
        font-size: 1rem;
        text-transform: uppercase;
        letter-spacing: 2px;
        cursor: pointer;
        position: relative;
        overflow: hidden;
        transition: all 0.3s;
      }
      
      .btn-cyberpunk:hover {
        background-color: var(--neon-yellow);
        color: var(--cyberpunk-darker);
        box-shadow: 0 0 10px var(--neon-yellow);
      }
      
      .btn-cyberpunk::before {
        content: '';
        position: absolute;
        width: 100%;
        height: 100%;
        background-color: var(--neon-yellow);
        top: 0;
        left: -100%;
        transform: skewX(-15deg);
        transition: all 0.5s;
        opacity: 0.3;
        z-index: -1;
      }
      
      .btn-cyberpunk:hover::before {
        left: 100%;
      }
      
      @keyframes glitch {
        0% {
          text-shadow: 0.05em 0 0 var(--neon-pink), -0.05em -0.025em 0 var(--neon-blue);
          transform: translate(0);
        }
        14% {
          text-shadow: 0.05em 0 0 var(--neon-pink), -0.05em -0.025em 0 var(--neon-blue);
        }
        15% {
          text-shadow: -0.05em -0.025em 0 var(--neon-pink), 0.025em 0.025em 0 var(--neon-blue);
        }
        49% {
          text-shadow: -0.05em -0.025em 0 var(--neon-pink), 0.025em 0.025em 0 var(--neon-blue);
        }
        50% {
          text-shadow: 0.025em 0.05em 0 var(--neon-pink), 0.05em 0 0 var(--neon-blue);
          transform: translate(0);
        }
        99% {
          text-shadow: 0.025em 0.05em 0 var(--neon-pink), 0.05em 0 0 var(--neon-blue);
          transform: translate(0);
        }
        100% {
          text-shadow: -0.025em 0 0 var(--neon-pink), -0.025em -0.025em 0 var(--neon-blue);
          transform: translate(0);
        }
      }
      
      @media (max-width: 768px) {
        h1 {
          font-size: 2rem;
        }
      }
    </style>

    <script>
      const params: { [key: string]: string } = {};
      new URLSearchParams(window.location.search).forEach((value, key) => {
        params[key] = value;
      });
      window.opener.postMessage({type: 'GRANT_INTERACTION', ...params}, '*');
      console.log('###Test message urlParams: ', new URLSearchParams(window.location.search).toString());
    </script>
  </body>
</html>